@{
    ViewData["Title"] = "BriskRoute";
}

<div class="main-wrapper">
    <div class="main-wrapper-content">

        <div class="info">
            <span><img src="img/icon1_black.svg" alt="Icon"></span>
            <h1>BriskRoute</h1>
            <p>The fastest way to deliver your packages.</p>
        </div>

        <div class="route-builder">

            <div class="route-builder-content">
                <div class="inputs">
                    <div class="route-builder-item">
                        <div class="route-builder-item-input-box">
                            <span>-></span>
                            <input class="search-input" placeholder="Сhoose the starting point" type="text" id="startPoint" autocomplete="off">
                        </div>

                        <ul class="sb-suggestions">
                            <li>Вводьте адресу а я вам допоможу)))</li>
                        </ul>
                    </div>

                    <div class="route-builder-item">
                        <div class="route-builder-item-input-box">
                            <span>-></span>
                            <input class="search-input" placeholder="Add a destination" type="text" id="finishPoint" autocomplete="off">
                        </div>
                        <ul class="sb-suggestions">
                            <li>Вводьте адресу а я вам допоможу)))</li>
                        </ul>
                    </div>

                </div>


                <a href="#" class="add-point-btn">+ Add another destination</a>
            </div>


            <button class="build-route-btn">
                <p>Build a route-></p>
            </button>
        </div>

    </div>
</div>


<div class="main">
    <div class="map-container">
        <div id="map"></div>


        <div class="map-container-actions">
            <button class="back-to-main-btn" id="back-to-main-btn">
                <p><- Back</p>
            </button>

            <div class="route-info-container">
                <div class="estimates-details-container">
                    <p class="title">Estimated Distance and Time</p>
                    <div class="estimates-details">
                        <p class="distance" id="total-distance">12km</p>
                        <p class="slesh">/</p>
                        <p class="time" id="total-time">4 hours</p>
                    </div>

                </div>


                <div class="full-route-details-container">
                    <p class="title">Number of Stops</p>
                    <div class="full-route-details">
                        <p class="stops-nums">10 stops</p>
                        <a href="#" id="viewDetailsBtn">View Details</a>

                    </div>
                    <div class="full-info">
                        <hr>
                        <ul>
                            <li><span>01</span><p>Apt. 771 6591 Shayne Estate</p></li>
                            <li><span>02</span><p>Київ</p></li>
                            <li><span>03</span><p>Київ</p></li>
                            <li><span>04</span><p>Київ</p></li>
                            <li><span>05</span><p>Київ</p></li>
                            <li><span>06</span><p>Київ</p></li>
                            <li><span>07</span><p>Київ</p></li>
                            <li><span>08</span><p>Київ</p></li>
                            <li><span>09</span><p>Київ</p></li>
                            <li><span>10</span><p>Київ</p></li>
                        </ul>
                    </div>
                </div>

                <button class="start-route-btn">
                    <p>Start a route -></p>
                </button>
            </div>
        </div>




    </div>
</div>
